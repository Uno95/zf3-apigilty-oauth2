<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Ticket2\Entity\Ticket" table="ticket">
    <id name="uuid" type="string" column="uuid" length="128">
      <generator strategy="UUID"/>
    </id>
    <field name="userProfileUuid" type="string" column="user_profile_uuid" length="128" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="name" type="text" column="name" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="code" type="integer" column="code" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="status" type="integer" column="status" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="createdAt" type="datetime" column="created_at"  nullable="true">
      <gedmo:timestampable on="create"/>
    </field>
    <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
      <gedmo:timestampable on="update"/>
    </field>
    <field name="deletedAt" type="datetime" column="deleted_at" nullable="true" />
    <gedmo:soft-deleteable field-name="deletedAt" time-aware="false" />
  </entity>
</doctrine-mapping>
